- model_class = TaskList
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize
.container-fluid
  .row-fluid
    .span10
      %h4= @task_list.title
      %h6= @task_list.description
      - @task_list.tasks.limit(5).each do |task|
        .span2.grayBG.img-thumbnail
          %h6= task.title
          %h6= task.description
          .span2
            = link_to task.title, task_path(task)
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(task), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(task), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'


%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), task_lists_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_list_path(@task_list), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), task_list_path(@task_list), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

- model_class = TaskList

.container-fluid
  .row-fluid
    #myCarousel.carousel.slide
      %ol.carousel-indicators
        - @task_lists.each do |tasklist_i|
          %li.active{"data-slide-to" => "#{@task_lists.to_a.index(tasklist_i)}", "data-target" => "#myCarousel"}
      .carousel-inner.grayBG
        - @task_lists.each do |tasklist_i|
          .item{class: "#{'active' if tasklist_i == @task_lists.first}"}
            %ul.thumbnails
              - tasklist_i.each do |task_list|

                %li.span2.tasklist
                  %a{href: task_list_path(task_list) }
                    .caption
                    .thumbnail
                      %h5= task_list.title
                      %h6= task_list.description
                      - task_list.tasks.limit(5).each do |task|
                        %h6= task.title
      %a.left.carousel-control{"data-slide" => "prev", href: "#myCarousel"} ‹
      %a.right.carousel-control{"data-slide" => "next", href: "#myCarousel"} ›


